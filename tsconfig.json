{
  "compilerOptions": {
    // Node 18
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["bin/*.ts"],
  "exclude": [
    "dist",
    "deno",
    "node_modules"
  ]
}
